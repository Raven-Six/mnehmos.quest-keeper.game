{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Quest Keeper AI",
  "version": "0.1.1",
  "identifier": "com.questkeeper.ai",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Quest Keeper AI",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "externalBin": [
      "rpg-mcp-server"
    ],
    "resources": [
      "better_sqlite3.node"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
